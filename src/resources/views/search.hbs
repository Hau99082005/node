<section class="search-results spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Kết quả tìm kiếm cho: "{{searchTerm}}"</h2>
                <div class="row">
                    {{#if products.length}}
                        {{#each products}}
                            <div class="col-lg-4 col-md-6 col-sm-6">
                                <div class="product__item">
                                    <div class="product__item__pic">
                                        <img src="img/{{this.image}}" alt="{{this.name}}" class="img-fluid">
                                        <ul class="product__item__pic__hover">
                                            <li>
                                                <a href="/product/{{this.id}}">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="/cart/add/{{this.id}}">
                                                    <i class="fa fa-shopping-cart"></i>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="product__item__text">
                                        <h6>
                                            <a href="/product/{{this.id}}">{{this.name}}</a>
                                        </h6>
                                        <h5>{{this.price}}<sup>đ</sup></h5>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    {{else}}
                        <div class="col-lg-12">
                            <p>Không tìm thấy sản phẩm nào phù hợp với từ khoá "{{searchTerm}}".</p>
                        </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</section>
