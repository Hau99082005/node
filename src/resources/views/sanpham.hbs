 <section class="hero hero-normal">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="hero__categories">
                        <div class="hero__categories__all" style="background: orange;">
                            <i class="fa fa-bars"></i>
                            <span>Danh Mục</span>
                        </div>
                        <ul>
                            {{#each categories}}
                            <li><a href="#">{{this.name}}</a></li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="hero__search">
                        <div class="hero__search__form">
                          <form action="/search" method="get">
    <input type="text" name="q" placeholder="Bạn cần tìm kiếm gì hôm nay?" required>
    <button type="submit" class="site-btn" style="background: orange;">Tìm Kiếm</button>
</form>
                        </div>
                        <div class="hero__search__phone">
                            <div class="hero__search__phone__icon">
                                <i class="fa fa-phone" style="color: orange;"></i>
                            </div>
                            <div class="hero__search__phone__text">
                                <h5>0367722389</h5>
                                <span>Hỗ trợ 24/7</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Hero Section End -->

    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>Organi Shop</h2>
                        <div class="breadcrumb__option">
                            <a href="/">Trang Chủ</a>
                            <span>Cửa Hàng</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-5">
                    <div class="sidebar">
                        <div class="sidebar__item">
                            <h4>Tìm kiếm theo từ khoá</h4>
                            <ul>
                                {{#each products}}
                                <li><a href="#">{{this.name}}</a></li>
                                {{/each}}
                            </ul>
                        </div>
    
                        <div class="sidebar__item">
                            <div class="latest-product__text">
                                <h4>Sản phẩm mới nhất</h4>
                                <div class="latest-product__slider owl-carousel">
                                    <div class="latest-prdouct__slider__item">
                                       {{#each product}}
                                        <a href="#" class="latest-product__item">
                                            <div class="latest-product__item__pic">
                                                <img src="img/{{this.image}}" alt="">
                                            </div>
                                            <div class="latest-product__item__text">
                                                <h6>{{this.name}}</h6>
                                                <span>{{this.price}}</span>
                                            </div>
                                        </a>
                                        {{/each}}
                                    </div>
                                    <div class="latest-prdouct__slider__item">
                                         {{#each product}}
                                        <a href="#" class="latest-product__item">
                                            <div class="latest-product__item__pic">
                                                <img src="img/{{this.image}}" alt="">
                                            </div>
                                            <div class="latest-product__item__text">
                                                <h6>{{this.name}}</h6>
                                                <span>{{this.price}}</span>
                                            </div>
                                        </a>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9 col-md-7">
                    <div class="product__discount">
                        <div class="section-title product__discount__title">
                            <h2>Giảm giá</h2>
                        </div>
                        <div class="row">
                            <div class="product__discount__slider owl-carousel">
                               {{#each products}}
                                <div class="col-lg-4">
                                    <div class="product__discount__item">
                                        <div class="product__discount__item__pic set-bg">
                                            <img src="img/{{this.image}}" alt="">
                                            <ul class="product__item__pic__hover">
                                                 <li><a href="#"><i class="fa fa-eye"></i></a></li>
                                                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                                            </ul>
                                        </div>
                                        <div class="product__discount__item__text">
                                            <h5><a href="#">{{this.name}}</a></h5>
                                            <div class="product__item__price">{{this.price}}<sup>đ</sup><span>{{this.price_old}}<sup>đ</sup></span></div>
                                        </div>
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        {{#each products}}
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product__item">
                                <div class="product__item__pic set-bg">
                                    <img src="img/{{this.image}}" alt="">
                                    <ul class="product__item__pic__hover">
                                        <li><a href="#"><i class="fa fa-eye"></i></a></li>
                                        <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h6><a href="#">{{this.name}}</a></h6>
                                    <h5>{{this.price}}<sup>đ</sup></h5>
                                    <span>{{this.price_old}}<sup>đ</sup></span>
                                </div>
                            </div>
                        </div>
                      {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </section>