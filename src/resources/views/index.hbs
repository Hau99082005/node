<section class="hero">
<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <div class="hero__categories">
                <div class="hero__categories__all" style="background: orange;">
                    <i class="fa fa-bars"></i>
                    <span>Danh Mục</span>
                </div>
                <ul> 
                    {{#each categories}}
                    <li><a href="#">{{this.name}}</a></li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="hero__search">
                <div class="hero__search__form">
                 <form action="/search" method="get">
    <input type="text" name="q" placeholder="Bạn cần tìm kiếm gì hôm nay?" required>
    <button type="submit" class="site-btn" style="background: orange;">Tìm Kiếm</button>
</form>


                </div>
                <div class="hero__search__phone">
                    <div class="hero__search__phone__icon">
                        <i class="fa fa-phone" style="color: orange;"></i>
                    </div>
                    <div class="hero__search__phone__text">
                        <h5>0367722389</h5>
                        <span>Hỗ trợ 24/7</span>
                    </div>
                </div>
              </div>
            <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
<div class="carousel-inner">
 {{#each banner}}
<div class="carousel-item active" data-bs-interval="3000">
<img src="img/{{this.image}}" class="d-block w-100" alt="...">
</div>
 {{/each}}
</div>
<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
<span class="carousel-control-prev-icon" aria-hidden="true"></span>
<span class="visually-hidden">Previous</span>
</button>
<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
<span class="carousel-control-next-icon" aria-hidden="true"></span>
<span class="visually-hidden">Next</span>
</button>
</div>
        </div>
    </div>
</div>
</section>

        <section class="categories">
        <div class="container">
            <div class="row">
                <div class="categories__slider owl-carousel">
                     {{#each products}}
                    <div class="col-lg-3">
                        <div class="categories__item set-bg">
                            <img src="img/{{this.image}}" alt="">
                            <h5><a href="#">{{this.name}}</a></h5>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </section>
    <section class="featured spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>Sản phẩm nổi bật</h2>
                    </div>
                    <div class="featured__controls">
                        <ul>
                            <li class="active"><a href="#" style="color: #000;">Tất cả</a></li>
                             {{#each categories}}
                            <li><a href="#" style="color: #000;">{{this.name}}</a></li>
                              {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row featured__filter">
                {{#each product}}
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg">
                            <img src="img/{{this.image}}" alt="">
                            <ul class="featured__item__pic__hover">
                                <li><a href="#"><i class="fa fa-eye"></i></a></li>
                                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="#">{{this.name}}</a></h6>
                            <h5>{{this.price}}<sup>đ</sup></h5>
                            <span style="text-decoration:line-through;">{{this.price_old}}<sup>đ</sup></span>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
    <!-- Featured Section End -->


